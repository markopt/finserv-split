<div class="grid-x grid-margin-x">
  <div class="cell large-10 large-offset-1 offer-test">
    <div class="grid-x grid-margin-x">
      <div class="cell medium-3 small-1">
        <div class="offer-img-con">
          <img src=<%= @img_url %> class="offer-img">
        </div>
      </div>
      <div class="cell small-11 medium-6 end offer-text">
        <h4><%= @message %></h4>
        <p class="offer-copy" style="font-size:1.2em">you qualify for <strong><%= @interest_rate_discount %>%</strong> off your interest rate when you sign up for automatic payments</p>
        <p>*Restrictions apply</p>
        <div class="grid-x grid-margin-x">
          <div class="medium-6 medium-offset-3 small-12">
            <a class="button" style="width:100%;"><%= @call_to_action %></a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>